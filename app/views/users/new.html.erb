<% provide(:title, 'Sign up') %>

<div>
<div class="row">
  <div class="col-lg-4">
    <div class="well bs-component">
      <div class="form-horizontal">

        <%= form_for(@user) do |f| %>
          <fieldset>

          <legend>Sign Up</legend>

          <div class="form-group">
            <%= render 'shared/error_messages' %>

            <%= f.label :name, class: "col-lg-4 control-label" %>
            <div class="col-lg-7 ">
              <%= f.text_field :name, class: "form-control", placeholder: "Name", type: "text" %>
            </div>
            </div>

            <div class="form-group">
            <%= f.label :email, class: "col-lg-4 control-label" %>
              <div class="col-lg-7">
                <%= f.text_field :email, class: 'form-control', placeholder: "Email", type: "text" %>
              </div>
            </div>

            <div class="form-group">
            <%= f.label :password, class: "col-lg-4 control-label" %>
              <div class="col-lg-7">
                <%= f.password_field :password, class: 'form-control', placeholder: "Password", type: "password" %>
              </div>
            </div>

            <div class="form-group">
            <%= f.label :password_confirmation, class: "col-lg-4 control-label" %>
              <div class="col-lg-7">
                <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Pass Confirmation", type: "password" %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-7 col-lg-offset-4">
                <%= f.submit "Create my account", class: "btn btn-primary" %>     
              </div>
            </div>

          </div>
          </fieldset>
        <% end %>
  
      </div>
    </div>
  </div>
</div>
</div>

