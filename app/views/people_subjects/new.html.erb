<% provide(:title, 'Sign up') %>

<div>
<div class="row">
  <div class="col-lg-4">
    <div class="well bs-component">
      <div class="form-horizontal">

        <%= form_for(@subject) do |f| %>
          <fieldset>

          <legend>New People Subject</legend>

          <div class="form-group">
            <%-! %= render 'shared/error_messages' % %>

            <%= f.label :first_name, class: "col-lg-4 control-label" %>
             <div class="col-lg-7 ">
              <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", type: "text" %>
             </div>
            </div>

            <div class="form-group">
            <%= f.label :last_name, class: "col-lg-4 control-label" %>
              <div class="col-lg-7">
                <%= f.text_field :last_name, class: 'form-control', placeholder: "Last Name", type: "text" %>
              </div>
            </div>

            <div class="form-group">
            <%= f.label :external_link, class: "col-lg-4 control-label" %>
              <div class="col-lg-7">
                <%= f.text_field :external_link, class: 'form-control', placeholder: "External Link", type: "text" %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-7 col-lg-offset-4">
                <%= f.submit "Create my account", class: "btn btn-primary" %>     
              </div>
            </div>

          </div>
          </fieldset>
        <% end %>
  
      </div>
    </div>
  </div>
</div>
</div>

